			<table>				
				<tr>
					<th></th>
					<th>Item</th>
					<th>Amazon Price</th>
					<th>Amazon Rating</th>
				</tr>
				<% @amazon.each do |item| %>
				<tr>											
					<% item[2].each do |image| %>
					<td><a href="<%= item[3][0] %>"><img src="<%= image %>"></a></td>
					<% end %>						
					<td><a href="<%= item[3][0] %>"><%= item[0] %></a></td>
					<td><%= item[1] %></td>
					<% if item[4].blank? %>
					<td><img src="/images/0star.png">No Ratings</td>
					<% else %>
					<% case item[4].split[0].to_f
						when 4.7..5 %><td><img src="/images/5star.png"><%= item[4] %></td>
					<%when 4.2..4.6 %><td><img src="/images/4.5star.png"><%= item[4] %></td>
					<%when 3.8..4.1 %><td><img src="/images/4star.png"><%= item[4] %></td>
