					<%when 0..0.6 %><td><img src="/images/0.5star.png"><%= item[4] %></td>
					<% end %>
					<% end %>
					<!-- this is how we get only the first chunk of review: <p><%= item[4].split[0]%></p> -->
				</tr>
				<% end %>
