<html>
<head>
	<title></title>
</head>
<body>
	<h3>What are you looking for ?</h3>
	<form action='/mains' method='post'>
	  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	  <p>I am looking for:<input type='text' name='user[search_key]'></p>
	  <input type="hidden" name="user[user_id]" value="<%= session[:user_id]%>"> 
	  <p><input type='submit' value='Search' /></p>
	</form>
		<a href="/signout"><button>Logoff</button></a>
<% if flash[:error] %>
<ul>
	<% flash[:error].each do |t| %> 
	<li><%= t %></li>
	<% end %>
</ul>
<% end %>
<h2>Recent searches:</h2>
<ul>
<% @searchedhistory.each do |t| %>
<li><%= t.search_key %></li>
<% end %>
</ul>
</body>
</html>